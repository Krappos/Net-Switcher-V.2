<ui:FluentWindow x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:tray="http://schemas.lepo.co/wpfui/2022/xaml/tray"
                 
    xmlns:local="clr-namespace:netSwitcherUI"
    mc:Ignorable="d"
    
    Title="Net Switcher" 
    Height="550" 
    Width="450"
   Icon="C:\Programovanie\Net switcher 2\Images\Apka.ico"
    WindowStartupLocation="CenterScreen"
    WindowBackdropType="Mica"
    ExtendsContentIntoTitleBar="True" Background="#FF1C1C1C" MinHeight="505">


    <!--pridavanie tray ikony do hiden baru-->

    <ui:FluentWindow.Resources>
        <tray:NotifyIcon 
        x:Key="MyTrayIcon"
        TooltipText="Net switcher 2"
        MenuOnRightClick="True"
        FocusOnLeftClick="True">

            <tray:NotifyIcon.Icon>
                <BitmapImage UriSource="pack://application:,,,/Apka.ico" />
            </tray:NotifyIcon.Icon>

            <tray:NotifyIcon.Menu>

                <ContextMenu>

                    <ui:MenuItem IsEnabled="False" >
                        <ui:MenuItem.Header>
                            <TextBlock>
            <Run Text="Status siete: " Foreground="White" />
            <Run Text="{Binding spravaStavu, FallbackValue='Nenačítané'}" 
         Foreground="{Binding farbaStavu, FallbackValue='White'}"
                 FontWeight="Bold" />
                            </TextBlock>
                        </ui:MenuItem.Header>
                        <ui:MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Status24"/>
                        </ui:MenuItem.Icon>
                    </ui:MenuItem>

                    <Separator/>
                    <ui:MenuItem Header="Ukončiť" Click="appClose" />
                </ContextMenu>
            </tray:NotifyIcon.Menu>
        </tray:NotifyIcon>
    </ui:FluentWindow.Resources>



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar 
        Grid.Row="0" 
        Title="Net Switcher" 
        Icon="pack://application:,,,/Apka.ico" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="85*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1" Margin="0,7,0,7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ui:TextBox x:Name="Tb_script" 
                        Grid.Column="0"
                        TextWrapping="Wrap" 
                        Text="" 
                        Margin="5,0,5,0" 
                        FontSize="10" 
                        VerticalAlignment="Center"/>

                <CheckBox x:Name="CheckBox1" 
                      Grid.Column="1" 
                      Margin="10,0,0,0" 
                      VerticalAlignment="Center"
                      Height="32"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="85*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Items}" Margin="0,15,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:netCard Margin="5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</ui:FluentWindow>

