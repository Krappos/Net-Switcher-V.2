<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:netSwitcherUI"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="netCard"
    mc:Ignorable="d" 
    d:DesignHeight="80" d:DesignWidth="400">

    <ui:Card>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>



            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ui:TextBlock x:Name="tx1" 
                              FontWeight="Bold"
                              HorizontalAlignment="Left" 
                              Margin="5,0,0,0" 
                              TextWrapping="Wrap" 
                              VerticalAlignment="Bottom">
                    <Run Text="{Binding Name}"/>
                </ui:TextBlock>

                <ui:TextBlock HorizontalAlignment="Left" 
                              Margin="5,0,0,0" 
                              Grid.Row="1" 
                              Foreground="Gray"
                              TextWrapping="Wrap" 
                              Text="{Binding speed}" 
                              VerticalAlignment="Top"/>
            </Grid>

            <ui:Button Grid.Column="2" 
                       Content="Pripojiť" 
                       Appearance="Secondary"
                       Margin="10" 
                       HorizontalAlignment="Stretch" 
                       VerticalAlignment="Center" Background="#FF2369B6"/>
            <ui:Image HorizontalContentAlignment="Center" Source="{Binding iconPath}" Height="50" Width="50" Margin="3,-2,7,-2">
            
            </ui:Image>

        </Grid>
    </ui:Card>
</UserControl>